generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metric {
  id         String   @id @default(cuid())
  serverName String
  status     String   // "Active", "Maintenance", "Down"
  cpuUsage   Int
  ramUsage   Int
  region     String
  createdAt  DateTime @default(now())
  type       String   // "Database", "Web", "Worker"
}
